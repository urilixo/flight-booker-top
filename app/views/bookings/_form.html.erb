<%= form_with model: @booking do |f| %>
  <%= f.label :passengers %>
  <%= f.fields_for :passengers do |passenger_f| %>
  <br>
  <%= "#{(passenger_f.index+1).ordinalize} passengers" %>
    <%= passenger_f.label :name %>
    <%= passenger_f.text_field :name %>
    <%= passenger_f.label :email %>
    <%= passenger_f.text_field :email %>
    <br>
  <% end %>
  <%= f.hidden_field :flight_id, value: params[:selected_flight] %>
  <%= f.submit %>
<% end %>